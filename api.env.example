# ============================================
# API Runtime Environment Variables
# ============================================

# Node Environment
NODE_ENV=production

# MongoDB Connection
MONGO_URI=mongodb://mongodb:27017/payments
# while running locally
#MONGO_URI=mongodb://localhost:27017/Payments-Dashboard?authSource=admin

# API Server Configuration
API_PORT=3333
API_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PATH=/ws/payments

# Logging
LOG_LEVEL=info

# Simulator Configuration
DEFAULT_SIMULATION_RATE=10

# Seeding Configuration
RUN_SEED=true
